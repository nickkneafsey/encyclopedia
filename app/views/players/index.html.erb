<p id="notice"><%= notice %></p>

<%= render 'search' %>

<h1>Listing Players</h1>
<%= will_paginate %>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= player.team %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Summaries', {controller: "summaries", action: "index", player_id: player.id} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
